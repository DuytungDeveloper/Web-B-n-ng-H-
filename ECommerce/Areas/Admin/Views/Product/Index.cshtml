                                            <div class="row">
                                                <div class="col">
                                                    <form class="form-horizontal">
                                                        <div class="form-group">
                                                            <label for="ProductId_detail" class="col-sm-2 control-label">ProductId</label>
                                                            <div class="col-sm-10">
                                                                <input type="text" class="form-control" id="ProductId_detail" disabled required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="productName_detail" class="col-sm-2 control-label">Tên sản phẩm</label>
                                                            <div class="col-sm-10">
                                                                <input type="text" class="form-control" id="productName_detail" placeholder="Tên sản phẩm" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="productTitleSEO_detail" class="col-sm-2 control-label">Title sản phẩm (SEO)</label>
                                                            <div class="col-sm-10">
                                                                <input type="text" class="form-control" id="productTitleSEO_detail" placeholder="Title sản phẩm (SEO)" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="productDescriptionShortSEO_detail" class="col-sm-2 control-label">Mô tả ngắn (SEO)</label>
                                                            <div class="col-sm-10">
                                                                <textarea class="form-control" id="productDescriptionShortSEO_detail" maxlength="255" required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="productKeyWordSEO_detail" class="col-sm-2 control-label">KeyWords (SEO)</label>
                                                            <div class="col-sm-10">
                                                                <input type="text" class="tags" id="productKeyWordSEO_detail" value="PHP,JS,jQuery,HTML,CSS" />
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="productCategory_detail" class="col-sm-2 control-label">Danh mục sản phẩm</label>
                                                            <div class="col-sm-10">
                                                                <select class="form-control selectpicker" id="productCategory_detail" required>
                                                                    <option value="1">Option 1</option>
                                                                    <option value="2">Option 2</option>
                                                                    <option value="3">Option 3</option>
                                                                    <option value="4">Option 4</option>
                                                                    <option value="5">Option 5</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="productPrice_detail" class="col-sm-2 control-label">Giá sản phẩm</label>
                                                            <div class="col-sm-10">
                                                                <input type="number" class="form-control" id="productPrice_detail" min="1000" max="999999999" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="productPriceDiscount_detail" class="col-sm-2 control-label">Giá Saleoff</label>
                                                            <div class="col-sm-10">
                                                                <input type="number" class="form-control" id="productPriceDiscount_detail" min="0" max="999999999">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="productDescriptionShort_detail" class="col-sm-2 control-label">Mô tả ngắn</label>
                                                            <div class="col-sm-10">
                                                                <textarea class="form-control" id="productDescriptionShort_detail" maxlength="500" required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="productDescriptionFull_detail" class="col-sm-2 control-label">Mô tả chi tiết</label>
                                                            <div class="col-sm-10">
                                                                <textarea id="productDescriptionFull_detail" name="editordata" required></textarea>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="quanLyAnh">
                                        <br />
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col">
                                                    <p>Quản lý ảnh</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="danhGiaSanPham">
                                        <br />
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col">
                                                    <p>Danh sách khách đánh giá</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="lichSuThayDoi">
                                        <br />
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col">
                                                    <p>Lịch sử thay đổi</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-warning" onclick="reloadDetailProduct(event)" data-loading-text="Đang tải ...">Tải lại</button>
                    <button type="button" class="btn btn-success">Lưu</button>
                </div>
            </div>
        </div>
    </div>
}
