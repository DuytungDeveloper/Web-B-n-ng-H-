<!-- page wapper-->
<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="#" title="Return to Home">Home</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">Xác minh tài khoản</span>
        </div>
        <!-- ./breadcrumb -->
        <!-- page heading-->
        <h2 class="page-heading">
            <span class="page-heading-title2">Kiểm tra tài khoản</span>
        </h2>
        <!-- ../page heading-->
        <div class="page-content">
            <div class="row">
                <div class="col-sm-6">
                    <div class="box-authentication">
                        <h3>Tạo tài khoản mới</h3>
                        <p>Nhập Email của bạn để tạo tài khoản mới</p>
                        <label for="emmail_register">Email address</label>
                        <input id="emmail_register" type="text" class="form-control">
                        <form method="get">
                            <button class="button" asp-controller="tai-khoan" asp-action="dang-ky"><i class="fa fa-user"></i> Tạo tài khoản</button>

                        </form>
                    </div>
                </div>
                <div class="col-sm-6">
                    <form class="box-authentication" asp-controller="tai-khoan" asp-action="dang-nhap" method="post">
                        <h3>Đã có tài khoản?</h3>
                        <label for="emmail_login">UserName</label>
                        <input id="emmail_login" type="text" name="UserName" class="form-control">
                        <label for="password_login">Password</label>
                        <input id="password_login" type="password" name="Password" class="form-control">
                        <p class="forgot-pass"><a href="#">Quên mật khẩu?</a></p>
                        <button class="button"><i class="fa fa-lock"></i> Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ./page wapper-->