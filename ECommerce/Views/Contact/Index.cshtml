            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">@language.CONTACT</span>
        </div>
        <!-- ./breadcrumb -->
        <!-- page heading-->
        <h2 class="page-heading">
            <span class="page-heading-title2">@language.CONTACT_US</span>
        </h2>
        <!-- ../page heading-->
        <div id="contact" class="page-content page-contact">
