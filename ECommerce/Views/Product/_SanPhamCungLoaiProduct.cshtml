@using System.Globalization;
@model ECommerce.Models.View.ProductDetailView
<!-- box product -->
<div class="page-product-box">
    <h3 class="heading">@ECommerce.Resources.Languages.ProductDetail.ProductDetail.SAN_PHAM_TUONG_TU</h3>
    <ul class="product-list owl-carousel" data-dots="false" data-loop="true" data-nav="true" data-margin="30" data-autoplayTimeout="1000" data-autoplayHoverPause="true" data-responsive='{"0":{"items":1},"600":{"items":3},"1000":{"items":3}}'>
        @for (int i = 0; i < Model.SanPhamTuongTu.Count(); i++)
        {
            var data = Model.SanPhamTuongTu[i];
            <li>
                <div class="product-container">
                    @await Component.InvokeAsync("ProductViewPartial", new { type = 1, data = data })
                </div>
            </li>
        }
    </ul>
</div>
<!-- ./box product -->
