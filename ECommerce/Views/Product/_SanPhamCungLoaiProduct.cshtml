@using System.Globalization;
@model ECommerce.Models.View.ProductDetailView
<!-- box product -->
<div class="page-product-box">
    <h3 class="heading">@ECommerce.Resources.Languages.ProductDetail.ProductDetail.SAN_PHAM_TUONG_TU</h3>
    <ul class="product-list owl-carousel" data-dots="false" data-loop="true" data-nav="true" data-margin="30" data-autoplayTimeout="1000" data-autoplayHoverPause="true" data-responsive='{"0":{"items":1},"600":{"items":3},"1000":{"items":3}}'>
        @for (int i = 0; i < Model.SanPhamTuongTu.Count(); i++)
        {
            var data = Model.SanPhamTuongTu[i];
            <li>
                <div class="product-container">
                    <div class="left-block">
                        <a asp-controller="san-pham" asp-action="index" asp-route-link="@(data.Url+"."+data.Id.ToString())">
                            @if (data.Product_Media.Count() > 0)
                            {
                                <img class="img-responsive" alt="product" src="@data.Product_Media[0].Media.Link" />
                            }
                            else
                            {
                                <img class="img-responsive" alt="product" src="/assets/data/p40.jpg" />
                            }
                        </a>
                        <div class="quick-view">
                            @*<a title="Add to my wishlist" class="heart" href="#"></a>
                                <a title="Add to compare" class="compare" href="#"></a>
                                <a title="Quick view" class="search" href="#"></a>*@
                        </div>
                        <div class="add-to-cart">

                            <a title="@language.ADD_TO_CART" onclick="addProductToCart('@(data.Url+"."+data.Id.ToString())')">@language.ADD_TO_CART</a>
                        </div>
                    </div>
                    <div class="right-block">
                        <h5 class="product-name"><a asp-controller="san-pham" asp-action="index" asp-route-link="@(data.Url+"."+data.Id.ToString())">@data.Name</a></h5>
                        <div class="product-star">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                        </div>
                        <div class="content_price">
                            @if (data.PriceDiscount.HasValue)
                            {
                                <span class="price product-price">@data.PriceDiscount.Value.ToString("C0", new CultureInfo("vi"))</span>
                                <span class="price old-price">@data.Price.ToString("C0", new CultureInfo("vi"))</span>

                            }
                            else
                            {
                                <span class="price product-price">@data.Price.ToString("C0", new CultureInfo("vi"))</span>
                            }
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
<!-- ./box product -->
